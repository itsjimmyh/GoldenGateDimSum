<!DOCTYPE html>
<html>
  <head>

    <title>GoldenGateDimSum</title>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= csrf_meta_tags %>

  </head>

  <body>

    <%= yield %>

  </body>
</html>

<%= javascript_include_tag 'application' %>

<script>
  $(document).ready(function () {
    ggDimSum.initialize();
  })

  <% if current_user %>
    ggDimSum.currentUser = new ggDimSum.Models.User({
      id: '<%= current_user.id %>',
      first_name: '<%= current_user.first_name %>',
      last_name: '<%= current_user.last_name %>',
      email: '<%= current_user.email %>'
    });
  <% else %>
    ggDimSum.currentUser = new ggDimSum.Models.User();
  <% end %>

</script>
