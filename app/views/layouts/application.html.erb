<!DOCTYPE html>
<html>
  <head>
    <!-- <%= favicon_link_tag 'ggdimsum.png' %> -->
    <%= favicon_link_tag 'ggds.png' %>
    <title>GoldenGateDimSum</title>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= csrf_meta_tags %>

    <meta name=viewport content="width=device-width, initial-scale=1.0">
    <!-- <link href="css/bootstrap-responsive.css" rel="stylesheet"> -->

  </head>

  <body>

    <%= yield %>

  </body>
</html>

<%= javascript_include_tag 'application' %>

<script>
  $(document).ready(function () {
    ggDimSum.initialize();
  })

  <% if current_api_user %>
    ggDimSum.currentUser = new ggDimSum.Models.User({
      id: '<%= current_api_user.id %>',
      first_name: '<%= current_api_user.first_name %>',
      last_name: '<%= current_api_user.last_name %>',
      email: '<%= current_api_user.email %>'
    });
  <% else %>
    ggDimSum.currentUser = new ggDimSum.Models.User();
  <% end %>

</script>
